<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="box" id="heading">
        <h1><%=listTitle%></h1>
    </div>
    <div class="box"> 
            <% newListItems.forEach(function(items){%>
             <form action="/delete" method="post">
                <div class="item">
                <input type="checkbox" name="checkbox" value="<%=items._id%>"onchange="this.form.submit()">
                <p><%=items.name%></p>
                </div> 
                <input type="hidden" name="listName" value="<%=listTitle%>">
             </form>   
                <%})%>    
        <form class= "item" action="/" method="post">
            <input type="text" name="newItem" placeholder="Add Todo" autocomplete="off">
            <button type="submit" name="list" value=<%=listTitle%>>+</button>
        </form>
    </div>    
</body>
</html>